{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build Alikins with make",
            "type": "shell",
            "command": "make -C ${workspaceFolder}/plugins/Alikins",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run with make run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}